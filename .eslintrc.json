{
  "rules": {
    "indent": [
      2,
      "tab"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "no-console": 2,
    "quotes": [
      2,
      "single"
    ],
    "semi": [
      2,
      "always"
    ]
  },
  "env": {
    "es6": true,
    "mocha": true,
    "node": true
  },
  "extends": "eslint:recommended"
}
